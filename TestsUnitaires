using NUnit.Framework;
using System;

namespace Karaté.Tests
{
    [TestFixture]
    public class GrapheTests
    {
        [Test]
        public void TestGrapheEstConnexe()
        {
            Noeud[] noeuds = new Noeud[]
            {
                new Noeud(0, new int[] { 1, 2 }),
                new Noeud(1, new int[] { 0, 2 }),
                new Noeud(2, new int[] { 0, 1 })
            };

            bool resultat = Graphe.EstConnexe(noeuds);

            Assert.IsTrue(resultat, "Le graphe devrait être connexe.");
        }

        [Test]
        public void TestGrapheContientCycle()
        {
            Noeud[] noeuds = new Noeud[]
            {
                new Noeud(0, new int[] { 1, 2 }),
                new Noeud(1, new int[] { 0, 2 }),
                new Noeud(2, new int[] { 0, 1 })
            };

            bool resultat = Graphe.ContientCycle(noeuds);

            Assert.IsTrue(resultat, "Le graphe devrait contenir un cycle.");
        }
    }
}
